<script>
  <% flash.each do |type, message| %>
    $.notify({
    message: "<%= message %>"
    },{
    type: "<%= flash_type_to_class type %>",
    placement: {
    from: "top",
    align: "right",
    },
    delay: 3000,
    animate: {
    enter: "animated bounce",
    exit: "animated bounce"
    }
    });
  <% end %>
</script>
